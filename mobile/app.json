{
  "expo": {
    "name": "Muraho Rwanda",
    "slug": "muraho-rwanda",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "scheme": "muraho",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "rw.muraho.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Muraho Rwanda uses your location to show nearby museums and heritage sites.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Enable location for walking route navigation.",
        "NSCameraUsageDescription": "Camera access is used to scan QR codes for tour group access.",
        "NSMicrophoneUsageDescription": "Microphone access is used for voice search in Ask Rwanda."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "rw.muraho.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-av",
      "expo-secure-store",
      [
        "expo-image",
        {
          "backgroundColor": "#1a1a2e"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "YOUR_MAPBOX_SECRET_TOKEN"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      },
      "apiUrl": "https://muraho.rw/api",
      "mapboxToken": "YOUR_MAPBOX_PUBLIC_TOKEN"
    },
    "updates": {
      "url": "https://u.expo.dev/YOUR_EAS_PROJECT_ID"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
